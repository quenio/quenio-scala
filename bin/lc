#!/usr/bin/env sc -deprecation
!#

import quenio.locale.repository._

try {
	new CommandApp(new LocaleRepository(".")) {
		appName = "lc"
		appArgs = args
		commands = Map(
			"level" -> level _
		)
	} start
} catch {
	case me: MatchError => println("Unexpected file or directory: " + me.getMessage)
	case e: Exception => println(e.getMessage)
}

def level(args: Array[String], repository: LocaleRepository) {
  if (args.length == 2) {
  } else {
    println("Please specify the base language for leveling and no more.")
  }
}